{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "jsx": true,
    "sourceType": "module"
  },
  "plugins": ["prettier", "react"],
  "rules": {
    "semi": ["error", "always"],
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],
    "prettier/prettier": [
      "error",
      {
        "jsxBracketSameLine": true,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "16.6"
    }
  }
}
